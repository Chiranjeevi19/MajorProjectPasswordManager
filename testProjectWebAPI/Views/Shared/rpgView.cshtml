@*RANDOM PASSWORD GENERATOR*@



<div class="modal fade" id="rpgModal" tabindex="-1" aria-labelledby="rpgModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="rpgModalLabel">RANDOM PASSWORD GENERATOR</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">




                <div class="container">
                        <div class="row">
                            <div class="col-lg-12 col-md-8">
                                <!-- LENGTH INPUT -->
                                <div class="mb-3 form-group">
                                    <label for="length" class="form-label">LENGTH</label>
                                    <input type="number" id="length" name="length" class="form-control"
                                           placeholder="" min="8" max="25" value="10">

                                </div>

                                <!-- UPPERACSE INPUT -->
                                <div class="form-group">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="uppercase" checked>
                                        <label class="form-check-label" for="uppercase">Include Uppercase?</label>
                                    </div>

                                </div>


                                <!-- NUMBERS BUTTON -->
                                <div class="form-group">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="numbers" checked>
                                        <label class="form-check-label" for="numbers">Include Numbers?</label>
                                    </div>
                                </div>


                                <!-- SPECIAL SYMBOLS BUTTON -->
                                <div class="form-group">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="symbols" checked>
                                        <label class="form-check-label" for="symbols">Include Special Symbols?</label>
                                    </div>
                                </div>
                                <br />

                                <div class="form-group">
                                    <button class="btn btn-dark" id="generate">Generate Password</button>
                                </div>
                                <br />
                                <div class="mb-3 form-floating">

                                    <input type="text" id="result" name="rpgPassword" class="form-control" />
                                    <label for="result" class="form-label">FINAL PASSWORD</label>
                                </div>


                            </div>
                        </div>
                        <br>

                        
                </div>




            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
