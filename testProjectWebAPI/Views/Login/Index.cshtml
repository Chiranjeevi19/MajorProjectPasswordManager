
@{
    ViewBag.Title = "LOGIN Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        .validationMessage {
            color: red;
            display: block;
        }

        li {
            padding-right: 1%;
            padding-left: 1%
        }

        .btn-link {
            text-decoration: none;
        }

        .card {
            margin: 10px;
            padding: 0;
            border: 0.5px solid black;
        }

        textarea {
            border: none;
        }

        form i {
            cursor: pointer;
            margin-left: -30px;
        }





    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Latest compiled and minified CSS -->
</head>

<body>



    <div class="container" id="loginForm" data-bind="visible: showLoginForm">
        <!-- Login Form -->
        <div class="row">
            <div class="col">
                <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">PASSWORD MANAGER</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#">LOGIN</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="~/Signup/Index" tabindex="-1" aria-disabled="true">SIGNUP</a>
                                </li>
                            </ul>

                        </div>
                    </div>
                </nav>
            </div>

        </div>

        <br />
        <div class="row">
            <div class="col-lg-12 col-md-8">
                <form data-bind="submit : validateAccount">
                    <div class="row">
                        <div>
                            <p class="h3">LOGIN</p>
                        </div>
                        <br />
                        <div id="loginError"></div>
                        <div class="col-lg-12 col-md-8">
                            <!-- EMAIL INPUT -->
                            <div class="form-floating mb-3 form-group">
                                <input type="email" data-bind="value : email" class="form-control" id="email" name="email"
                                       placeholder="name@example.com">
                                <label for="email">Email address</label>
                            </div>

                            <!-- PASSWORD INPUT -->
                            <div class="form-floating form-group">

                                <input type="password" class="form-control" name="password" id="password"
                                       placeholder="Password" data-bind="value : password">
                                <label for="password">Enter your master password</label>
                            </div>

                            <br>
                            <!-- LOGIN BUTTON -->
                            <div class="form-floating">
                                <button type="submit" class="btn btn-outline-success">LOGIN</button>
                            </div>

                        </div>
                    </div>
                    <br>

                    <div class="row">
                        <div class="col-lg-7 col-md-8 h5">
                            Don't have an account?
                            <br><br>
                            <a href="~/Signup/Index">SIGNUP</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>








    @*Users Data*@
    <div class="container">


        <!-- navbar -->
        <div class="row" id="dataNav">
            <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">PASSWORD MANAGER</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <button class="btn btn-link" id="npToggler">NOTES</button>
                            </li>
                            <li class="nav-item">
                                <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#rpgModal">
                                    RPG
                                </button>
                            </li>
                        </ul>
                        <button class="btn btn-danger" id="logout">LOGOUT</button>
                    </div>
                </div>
            </nav>
        </div>

        @Html.Partial("~/Views/Shared/rpgView.cshtml")




        <br />






        <!--SHOW PASSWORD DATA-->
        <div id="PasswordData">
            <div class="row">

                @*FORM for adding data*@
                <div class="col-12">
                    <div class="card" style="width: 72rem;">
                        @*<img class="card-img-top"  alt="Card image cap">*@
                        <div class="card-body">
                            <h5 class="card-title">ADD NEW PASSWORD DATA</h5>
                            <div class="card-text" id="pwdFormHelper"></div>
                            <form>
                                <div class="form-group">
                                    <label for="userdata_uname" class="form-label">USERNAME</label>
                                    <input type="text" id="userdata_uname" class="form-control card-text" data-bind="value : userpwdData_uname" />
                                </div>
                                <div class="form-group">
                                    <label for="userdata_upwd" class="form-label">PASSWORD</label>
                                    <input type="password" class="form-control  card-text" id="userdata_upwd" data-bind="value : userpwdData_upwd" />
                                </div>
                                <div class="form-group">
                                    <label for="userdata_url" class="form-label">URL/APPLICATION NAME</label>
                                    <input type="text" class="form-control  card-text" id="userdata_url" data-bind="value : userpwdData_url" />
                                </div>
                                <br />
                                <button class="btn btn-outline-info" data-bind="click : addNewPasswordData">ADD NEW DATA</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- ko foreach: displayPasswordData-->
                <div class="col">

                    <div class="card" style="width: 18rem; ">
                        <div class="card-body">
                            <h5 class="card-title" data-bind="text: $data.url"></h5>
                            <span>USERNAME:</span> <p class="card-text" data-bind="text: $data.username"></p>
                            <span>PASSWORD</span> <p class="card-text" data-bind="text: $data.password"></p>
                            <button type="button" class="btn btn-primary" data-bind="click: $parent.setEditIndex" data-bs-toggle="modal" data-bs-target="#Modal">
                                EDIT DATA
                            </button>
                            <button class="btn btn-danger" data-bind="click : $parent.deleteCurrentData">REMOVE</button>
                        </div>
                    </div>



                </div>

                <!-- /ko -->

                <div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="ModalLabel">EDIT DATA</h5>
                                <div id="editPwdHelper"></div>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div id="editData"></div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" data-bind="click: saveEditedData">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>





            </div>

        </div>









        <!--SHOW NOTES DATA-->
        <div id="NotesData">
            <div class="row">
                @*FORM for adding NOTES*@
                <div class="col-12">
                    <div class="card" style="width: 72rem;">
                        @*<img class="card-img-top"  alt="Card image cap">*@
                        <div class="card-body">
                            <h5 class="card-title">ADD NEW SECRET NOTE</h5>
                            <div class="card-text" id="noteFormHelper"></div>
                            <form>
                                <div class="form-group">
                                    <label for="userdata_note" class="form-label">NOTE <span style="color: blue;">(Please enter text less than 1000 characters)</span></label>
                                    <textarea id="userdata_note" class="form-control card-text" rows="10" maxlength="1000" data-bind="value : usernotesData_note"></textarea>
                                </div>
                                <br />
                                <button class="btn btn-outline-info" data-bind="click : addNewNoteData">ADD NEW DATA</button>
                            </form>
                        </div>
                    </div>
                </div>


                <!-- ko foreach: displayNotesData -->
                <div class="col">

                    <div class="card" style="width: 18rem; ">
                        <div class="card-body">
                            <h5 class="card-title">NOTE</h5>
                            <textarea readonly class="card-text" rows="10" data-bind="text: $data.note"></textarea>
                            <span>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#noteModal" data-bind="click: $parent.setEditIndex">
                                    EDIT DATA
                                </button>
                                <button class="btn btn-danger" data-bind="click: $parent.deleteCurrentNoteData">REMOVE</button>
                            </span>




                            <!-- Button trigger modal -->
                            <!-- Modal -->







                        </div>
                    </div>

                </div>
                <!-- /ko -->
                <div class="modal fade" id="noteModal" tabindex="-1" aria-labelledby="noteModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <div id="editHelper"></div>
                                <h5 class="modal-title" id="noteModalLabel">EDIT NOTE</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body" id="editNoteBody">

                            </div>
                            <div class="modal-footer">
                                <span class="editNoteData"></span>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" data-bind="click: saveEditedNoteData">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>

    </div>

    <script src="~/Scripts/knockout-3.5.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout-validation/2.0.4/knockout.validation.min.js" integrity="sha512-b99MDNv5TqiZtPKH2UeHzDAVydmgrOJEPtaPPEF8AgV86eYyqINFI/K7/7f0+R4WNTAVv8KvvpjwfOYHv5rd5g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/Scripts/Shared/AESService.js"></script>
    <script src="~/Scripts/DataManagers/usersDataManager.js"></script>
    <script src="~/Scripts/DataManagers/saltsDataManager.js"></script>
    <script src="~/Scripts/DataManagers/usersPasswordsDataManager.js"></script>
    <script src="~/Scripts/DataManagers/usersNotesDataManager.js"></script>
    <script type="module" src="~/Scripts/Login/Login.js"></script>
    <script src="~/Scripts/Shared/rpg.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js" integrity="sha512-E8QSvWZ0eCLGk4km3hxSsNmGWbLtSCSUcewDQPQWZF6pEU8GlT8a5fF32wOl1i8ftdMhssTrF/OhyGWwonTcXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>